<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/deepPurple_800</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--Components-->

    <!--Bottom Sheets-->

    <!--Navigation Drawer-->

    <style name="Widget.App.Button.TextButton.IconOnly" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>


    <style name="Widget.MyTheme.Button.IconOnly" parent="Widget.MaterialComponents.Button">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>


    <style name="Theme.MyTheme.Dialog" parent="Theme.MaterialComponents.Dialog.Alert.Bridge">
        <!--        <item name="colorAccent">@color/colorPrimaryDark</item>-->
    </style>

    <style name="Theme.MyTheme.TabLayout" parent="Widget.MaterialComponents.TabLayout.Colored">
        <item name="android:background">@color/indigo_A700</item>
        <item name="tabSelectedTextColor">@color/white_50</item>
        <item name="tabTextColor">@color/semi_transparent_white</item>
    </style>

</resources>
