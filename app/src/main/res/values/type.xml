    <style name="TextAppearance.MyTheme.NoteEditor.Title" parent="TextAppearance.MaterialComponents.Headline3">
        <!--        <item name="android:fontFamily">@font/OpenSans-SemiBold</item>-->
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/open_sans_semi_bold</item>
    </style>

    <style name="TextAppearance.MyTheme.Overline.Heading" parent="TextAppearance.MyTheme.Headline6">
        <item name="android:textSize">22sp</item>
        <item name="android:drawableTint">@color/white_50</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:letterSpacing">0.08</item>
        <item name="android:paddingHorizontal">@dimen/keyline_4</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingVertical">@dimen/keyline_4</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontFamily">@font/open_sans_light</item>
    </style>

