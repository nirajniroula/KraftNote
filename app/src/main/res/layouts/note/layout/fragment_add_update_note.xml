<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/close_editor_button"
        style="@style/Widget.App.Button.TextButton.IconOnly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:icon="@drawable/ic_baseline_arrow_back_24"
        app:iconSize="28dp"
        app:iconTint="@color/black_800" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/save_note_button"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:text="@string/save"
        android:textColor="@color/blue_A700"
        app:iconSize="28dp"
        app:iconTint="@color/blue_A700"
        tools:ignore="RelativeOverlap" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/save_note_button"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/keyline_4"
        android:background="@color/grey_200" />

    <com.example.kraftnote.ui.note.editor.NoteTitleText
        android:id="@+id/note_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider"

        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/note_reminders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/note_title"
        android:layout_marginTop="@dimen/keyline_2"
        android:background="@color/white_50"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/keyline_5"
        android:paddingVertical="@dimen/keyline_2">

        <TextView
            android:id="@+id/location_reminder_detail"
            style="@style/TextAppearance.MyTheme.Subtitle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/keyline_2"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/not_set"
            android:textColor="@color/blueGrey_600"
            android:textSize="12sp"
            android:visibility="gone"
            app:drawableTint="@color/blueGrey_400"
            app:fontFamily="@font/open_sans_semi_bold"
            app:iconSize="2dp" />

        <TextView
            android:id="@+id/datetime_reminder_detail"
            style="@style/TextAppearance.MyTheme.Subtitle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/keyline_1"
            android:drawablePadding="@dimen/keyline_2"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/not_set"
            android:textColor="@color/blueGrey_600"
            android:textSize="12sp"
            android:visibility="gone"
            app:drawableTint="@color/blueGrey_400"
            app:fontFamily="@font/open_sans_semi_bold" />
    </LinearLayout>


    <TextView
        android:id="@+id/note_body_caption"
        style="@style/TextAppearance.MyTheme.Overline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/note_reminders"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/keyline_2"

        android:paddingHorizontal="@dimen/keyline_5"
        android:text="@string/note_body_field"
        android:textColor="@color/black_800" />


    <com.example.kraftnote.ui.note.editor.NoteBodyText
        android:id="@+id/editor_body_text"
        style="@style/Widget.MyTheme.TextInputLayout.NoteTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/note_editor_bottom_sheet"
        android:layout_below="@id/note_body_caption"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"

        android:layout_marginTop="@dimen/keyline_2"
        android:background="@drawable/note_editor_background_light"
        android:paddingHorizontal="@dimen/keyline_3"
        android:paddingVertical="@dimen/keyline_2"
        app:hintAnimationEnabled="false"
        app:hintEnabled="false" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/places_autosuggest_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:visibility="gone">

        <fragment
            android:id="@+id/places_autocomplete_fragment"
            android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/map_material_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:visibility="gone">

        <fragment
            android:id="@+id/show_google_map_fragment"
            android:name="com.example.kraftnote.ui.note.editor.NoteMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </com.google.android.material.card.MaterialCardView>

    <include
        layout="@layout/note_editor_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
