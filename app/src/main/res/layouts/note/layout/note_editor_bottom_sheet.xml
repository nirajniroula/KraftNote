<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/note_editor_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:behavior_peekHeight="60dp"
    app:behavior_skipCollapsed="true"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <View
        android:id="@+id/shadow"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/shape_gradient_top_shadow"
        app:layout_anchor="@id/note_editor_bottom_sheet_content" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/note_editor_bottom_sheet_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white_50"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:padding="@dimen/keyline_5">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bottom_sheet_camera"
                style="@style/Widget.MyTheme.Button.IconOnly.CircularOutlined"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_baseline_photo_camera_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bottom_sheet_image"
                style="@style/Widget.MyTheme.Button.IconOnly.CircularOutlined"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/keyline_5"
                app:icon="@drawable/ic_baseline_image_24"
                app:layout_constraintStart_toEndOf="@+id/bottom_sheet_camera"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bottom_sheet_location"
                style="@style/Widget.MyTheme.Button.IconOnly.CircularOutlined"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/keyline_5"
                app:icon="@drawable/ic_baseline_location_on_24"
                app:layout_constraintStart_toEndOf="@+id/bottom_sheet_image"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bottom_sheet_todo"
                style="@style/Widget.MyTheme.Button.IconOnly.CircularOutlined"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/keyline_5"
                app:icon="@drawable/ic_baseline_format_list_bulleted_24"
                app:layout_constraintStart_toEndOf="@+id/bottom_sheet_location"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bottom_sheet_calendar"
                style="@style/Widget.MyTheme.Button.IconOnly.CircularOutlined"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/keyline_5"
                app:icon="@drawable/ic_baseline_calendar_today_24"
                app:layout_constraintStart_toEndOf="@+id/bottom_sheet_todo"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bottom_sheet_mic"
                style="@style/Widget.MyTheme.Button.IconOnly.CircularOutlined"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/keyline_5"
                app:icon="@drawable/ic_baseline_mic_24"
                app:layout_constraintStart_toEndOf="@+id/bottom_sheet_calendar"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </HorizontalScrollView>


</LinearLayout>
