<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:fitsSystemWindows="true"
    tools:app=".ui.note.NoteFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/view_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@color/grey_100"
        android:clipToPadding="false"
        android:elevation="4dp">

        <TextView
            style="@style/TextAppearance.MyTheme.Overline.Heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/keyline_3"
            android:text="@string/my_notes"
            app:drawableStartCompat="@drawable/ic_baseline_event_note_24"
            app:drawableTint="@color/semi_transparent_black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.example.kraftnote.ui.category.components.CategoryTabLayout
        android:id="@+id/category_tabs"
        style="@style/Theme.MyTheme.TabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_heading"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:fitsSystemWindows="true"
        app:tabMode="scrollable" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/search_note_input_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/category_tabs"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@color/indigo_A400"
        android:paddingHorizontal="@dimen/keyline_4"
        android:paddingVertical="@dimen/keyline_3"
        >

        <com.example.kraftnote.ui.note.editor.components.InputText
            android:id="@+id/searchNoteInput"
            style="@style/ThemeOverlay.MyTheme.TextInputEditText.Search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:hint="@string/search"
            android:inputType="text"
            android:paddingHorizontal="@dimen/keyline_6"
            android:paddingVertical="@dimen/keyline_4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.example.kraftnote.ui.note.components.NoteRecyclerView
        android:id="@+id/noteRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/search_note_input_wrapper"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@color/indigo_50"
        android:clipToPadding="true"
        android:gravity="top"
        tools:listitem="@layout/component_note_card" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addNoteFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="86dp"
        app:backgroundTint="@color/indigo_A400"
        app:fabSize="auto"
        app:srcCompat="@android:drawable/ic_input_add"
        app:tint="#FFFFFF" />

</RelativeLayout>
