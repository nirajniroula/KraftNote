<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:app=".ui.note.NoteFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/view_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:clipToPadding="false"
        android:background="@color/grey_100"
        android:elevation="4dp">

        <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/TextAppearance.MyTheme.Overline.Heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/keyline_3"
            android:text="@string/my_notes"
            app:drawableStartCompat="@drawable/ic_baseline_event_note_24"
            app:drawableTint="@color/semi_transparent_black" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.example.kraftnote.ui.category.components.CategoryTabLayout
        android:id="@+id/category_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_heading"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:fitsSystemWindows="true"
        android:background="@color/grey_200"
        app:tabMode="scrollable" />

    <com.example.kraftnote.ui.note.components.NoteRecyclerView
        android:id="@+id/note_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/category_tabs"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:clipToPadding="true"
        android:gravity="top"
        android:background="@color/grey_50"
        tools:listitem="@layout/component_note_card" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_note_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="86dp"
        app:backgroundTint="#7e57c2"
        app:fabSize="auto"
        app:srcCompat="@android:drawable/ic_input_add"
        app:tint="#FFFFFF" />

</RelativeLayout>
