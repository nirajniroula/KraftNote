<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/fragment_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/keyline_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/images_caption"
            style="@style/TextAppearance.MyTheme.Overline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="@string/images"
            android:textColor="@color/black_800" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/add_image_camera_button"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/keyline_2"
            android:layout_toStartOf="@+id/add_image_button"
            android:text="@string/camera"
            android:textSize="12sp"
            android:visibility="gone"
            app:icon="@drawable/ic_baseline_photo_camera_24"
            app:iconSize="16dp"
            app:iconTint="@color/colorPrimaryDark"
            tools:ignore="RelativeOverlap" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/add_image_button"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="@string/add"
            android:textSize="12sp"
            app:icon="@drawable/ic_baseline_image_24"
            app:iconSize="16dp"
            app:iconTint="@color/colorPrimaryDark"
            tools:ignore="RelativeOverlap" />
    </RelativeLayout>

    <com.example.kraftnote.ui.note.editor.components.ImageRecyclerView
        android:id="@+id/image_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/keyline_2"
        android:paddingVertical="@dimen/keyline_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:listitem="@layout/component_image_card"
        app:layout_constraintTop_toBottomOf="@id/fragment_header" />
</androidx.constraintlayout.widget.ConstraintLayout>